@model ActivityProjectManage.Models.Activity
@Html.HiddenFor(m => m.isaddActivity, new { Value = false })
@Html.HiddenFor(m => m.isdeleteActivity, new { Value = false })
@Html.HiddenFor(m => m.ID)
@Html.HiddenFor(m => m.HeaderID)
@Html.HiddenFor(m => m.CreateDate)
@Html.HiddenFor(m => m.Level)
@Html.HiddenFor(m => m.ProjectID)
@Html.HiddenFor(m => m.IsDeleted)


@if (Model.IsDeleted != true)
{
    <div class="row" id="activity_@Html.IdFor(m => m.ID)">

        <div class="col-lg-offset-1">
            @for (int i = 0; i < Model.Level; i++)
            {
                <div class="form-group col-sm-1">
                    @Html.DisplayName("       ")
                </div>
            }
            <div class="form-group col-sm-2">
                @Html.DisplayName("Activity Name")
            </div>
            <div class="form-group col-sm-4">
                @Html.EditorFor(model => model.ActivityName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="form-group col-sm-4">
                <input type="submit" value="Delete" class="btn" style="border:0px; background:none;" onclick="DeleteAct(@Html.IdFor(m => m.IsDeleted))" /> |
                <input type="submit" value="Add SubAct" class="btn" style="border:0px; background:none;" onclick="AddSubAct(@Html.IdFor(m => m.isaddActivity))" />
            </div>
        </div>
    </div>
    @Html.EditorFor(m => m.Activity1)
 } 
